    "import random\n",
    "import hashlib\n",
    "\n",
    "\n",
    "def hashing():\n",
    "    password = input('password: ')\n",
    "    salt = f\"{random.getrandbits(128):16x}\"\n",
    "    hashvalue = hashlib.sha512(password.encode() + salt.encode()).hexdigest()\n",
    "    print(f\"{salt}:{hashvalue}\")\n",
    "\n",
    "\n",
    "hashing()"
   ]
  }
